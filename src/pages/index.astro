---
import BaseHead from "../components/BaseHead.astro";
import HeaderLink from "../components/HeaderLink.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

const posts = (await Astro.glob("./blog/*.{md,mdx}")).sort(
  (a, b) =>
    new Date(b.frontmatter.pubDate).valueOf() -
    new Date(a.frontmatter.pubDate).valueOf()
);

const latest = posts.slice(0, 4);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      ul {
        list-style-type: none;
        padding: unset;
      }
      .articles-cont {
        display: grid;
        grid-template-columns: 51% 51%;
      }
      section a {
        color: #1a202a;
      }
      article {
        position: relative;
        display: flex;
        flex-direction: column;
        width: 350px;
        margin-bottom: 25px;
      }
      article a {
        width: 100%;
        height: 100%;
        position: absolute;
      }
      article div img {
        width: 350px;
      }
      article time {
        font-style: italic;
        color: #595959;
      }
      article h3 {
        margin: 0px;
        font-family: "Open Sans", sans-serif;
        font-size: 20px;
      }
      @media only screen and (max-width: 780px) {
        .articles-cont {
          display: grid;
          grid-template-columns: 100%;
        }
        article {
          position: relative;
          display: flex;
          flex-direction: row-reverse;
          justify-content: space-between;
          margin-bottom: 25px;
          width: 100%;
        }
        .image-cube {
          width: 90px;
          height: 90px;
          display: flex;
          justify-content: center;
          align-items: center;
          overflow: hidden;
        }
        .image-cube img {
          width: 100%;
          height: 100%;
          object-fit: fill;
        }
        .article-data {
          width: 260px;
          display: flex;
          flex-direction: column;
          justify-content: space-between;
        }
      }
    </style>
  </head>

  <body>
    <Header title={SITE_TITLE} />
    <main>
      <section>
        <h1>Hi there, I'm Luciano Canziani ðŸ‘‹</h1>
        <p>
          Welcome to "Site Name"! In here you'll find my journey as a developer.
          From informative, tutorials to a bit of personal advice.
        </p>
      </section>
      <section>
        <h2>My latest articles</h2>
        <div class="articles-cont">
          {
            latest.map((post) => (
              <article>
                <a href={post.url} />
                <div class="image-cube">
                  <img src={post.frontmatter.heroImage} class="blogImage" />
                </div>
                <div class="article-data">
                  <h3>{post.frontmatter.title}</h3>
                  <time datetime={post.frontmatter.pubDate}>
                    {new Date(post.frontmatter.pubDate).toLocaleDateString(
                      "en-us",
                      {
                        year: "numeric",
                        month: "short",
                        day: "numeric",
                      }
                    )}
                  </time>
                </div>
              </article>
            ))
          }
        </div>
        <HeaderLink href="/blog">See all articles</HeaderLink>
      </section>
    </main>
    <Footer />
  </body>
</html>
